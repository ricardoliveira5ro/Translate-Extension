{
    "manifest_version": 3,
    "name": "Quick translation",
    "version": "1.0",
    "description": "Translate selected text on the screen",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "action": {
        "default_popup": "src/index.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["src/content.js"],
          "css": ["src/styles.css"]
        }
    ],
    "web_accessible_resources": [
        {
          "resources": ["icons/icon32.png"],
          "matches": ["<all_urls>"]
        }
    ]
}